#include <dt-bindings/zmk/matrix_transform.h>
#include "titan8000-layouts.dtsi"
#include "titan8000-soft-off.dtsi"

/ {
	kscan0: kscan {
		compatible = "titan8000,kscan-gpio-charlieplex";

		status = "okay";

    	gpios
      	= <&xiao_d 0 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
      	, <&xiao_d 1 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
      	, <&xiao_d 2 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
    	, <&xiao_d 3 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
      	, <&xiao_d 4 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
      	, <&xiao_d 5 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
      	, <&xiao_d 6 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
      	, <&xiao_d 7 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
      	, <&xiao_d 8 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>
      	, <&xiao_d 9 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;

		/*
		 * Board-specific overlays/dtsi provide:
		 * - compatible
		 * - interrupt-gpios
		 * - debounce/poll tuning
		 */
	};

	default_transform: keymap_transform_0 {
		compatible = "zmk,matrix-transform";
		rows = <5>;
		columns = <16>;
		map = <
			RC(1,0) RC(2,0) RC(3,0) RC(4,0) RC(5,0) RC(6,0) RC(7,0) RC(8,0) RC(0,5) RC(1,5) RC(2,5) RC(3,5) RC(4,5) RC(6,5) RC(7,5) RC(8,5)
			RC(0,1) RC(2,1) RC(3,1) RC(4,1) RC(5,1) RC(6,1) RC(7,1) RC(8,1) RC(0,6) RC(1,6) RC(2,6) RC(3,6) RC(4,6) RC(5,6) RC(7,6) RC(8,6)
			RC(0,2) RC(1,2) RC(3,2) RC(4,2) RC(5,2) RC(6,2) RC(7,2) RC(8,2) RC(0,7) RC(1,7) RC(2,7) RC(3,7) RC(4,7) RC(5,7) RC(6,7)
			RC(0,3) RC(1,3) RC(2,3) RC(4,3) RC(5,3) RC(6,3) RC(7,3) RC(8,3) RC(0,8) RC(1,8) RC(2,8) RC(3,8) RC(8,7) RC(9,7) RC(5,8)
			RC(0,4) RC(1,4) RC(2,4) RC(3,4) RC(5,4) RC(6,4) RC(7,4) RC(8,4) RC(9,4) RC(6,8) RC(7,8) RC(9,8)
	>;
	};
};